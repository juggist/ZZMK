<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100">

        <TextView
            android:id="@+id/home_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="转发设置"
            android:textColor="@color/color_invitecode"
            android:textSize="@dimen/sp_30" />

        <ImageView
            android:id="@+id/home_iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_30"
            android:src="@drawable/common_pop_close" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/font_normal" />

    <ListView
        android:id="@+id/home_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/font_normal"
        android:dividerHeight="@dimen/dp_1"></ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/font_normal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/home_custom_price"
            android:textColor="@color/color_invitecode"
            android:textSize="@dimen/sp_28" />

        <EditText
            android:id="@+id/home_et"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_toLeftOf="@+id/home_unit"
            android:background="@drawable/home_edittext_strok_bg"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/font_select"
            android:textSize="@dimen/sp_28" />

        <TextView
            android:id="@+id/home_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/home_unit"
            android:textColor="@color/color_invitecode"
            android:textSize="@dimen/sp_28" />
    </RelativeLayout>

    <Button
        android:id="@+id/home_btn_ensure"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="@color/font_select"
        android:text="@string/common_ensure"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_30" />
</LinearLayout>