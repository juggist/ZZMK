<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_180"
    android:maxHeight="@dimen/dp_180">

    <ImageView
        android:id="@+id/order_iv_icon"
        android:layout_width="@dimen/dp_158"
        android:layout_height="@dimen/dp_158"
        android:layout_marginLeft="@dimen/common_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_40"
        android:maxLines="2"
        android:textColor="@color/color_invitecode"
        android:textSize="@dimen/sp_26"
        app:layout_constraintLeft_toRightOf="@+id/order_iv_icon"
        app:layout_constraintRight_toLeftOf="@+id/order_tv_real_money"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_tv_specs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:maxLines="1"
        android:textColor="@color/font_normal"
        android:textSize="@dimen/sp_24"
        app:layout_constraintLeft_toLeftOf="@+id/order_tv_content"
        app:layout_constraintRight_toRightOf="@+id/order_tv_content"
        app:layout_constraintTop_toBottomOf="@+id/order_tv_content" />

    <TextView
        android:id="@+id/order_tv_real_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/common_margin"
        android:maxLines="1"
        android:textColor="@color/color_invitecode"
        android:textSize="@dimen/sp_28"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:maxLines="1"
        android:textColor="@color/font_normal"
        android:textSize="@dimen/sp_28"
        app:layout_constraintRight_toRightOf="@+id/order_tv_real_money"
        app:layout_constraintTop_toBottomOf="@+id/order_tv_real_money" />

    <TextView
        android:id="@+id/order_tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:maxLines="1"
        android:textColor="@color/font_normal"
        android:textSize="@dimen/sp_28"
        app:layout_constraintRight_toRightOf="@+id/order_tv_real_money"
        app:layout_constraintTop_toBottomOf="@+id/order_tv_money" />
</androidx.constraintlayout.widget.ConstraintLayout>
