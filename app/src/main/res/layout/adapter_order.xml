<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74">

        <ImageView
            android:id="@+id/iv_status"
            android:src="@drawable/order_icon_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/iv_status"
            android:textColor="@color/color_invitecode"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_margin"
            android:textColor="@color/color_invitecode"
            android:textSize="@dimen/sp_24" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/item_bg" />

    <com.juggist.baseandroid.view.NoScrollRecycleListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.juggist.baseandroid.view.NoScrollRecycleListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/item_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_total_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/color_invitecode"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:text="@string/order_total_money_3"
            android:textColor="@color/color_invitecode"
            android:textSize="@dimen/sp_26" />

        <TextView
            android:id="@+id/tv_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_margin"
            android:textColor="@color/font_select"
            android:textSize="@dimen/sp_26" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/item_bg" />

    <LinearLayout
        android:id="@+id/ll_status"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_order_review"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_54"
            android:layout_marginRight="@dimen/common_margin"
            android:background="@drawable/button_auth_code_click"
            android:text="@string/order_review"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/sp_24" />

        <Button
            android:id="@+id/btn_order_option"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_54"
            android:layout_marginRight="@dimen/common_margin"
            android:background="@drawable/button_auth_code_click_pre"
            android:text="@string/order_confrim"
            android:textColor="@color/font_select"
            android:textSize="@dimen/sp_24" />

        <Button
            android:id="@+id/btn_order_transport"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_54"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/button_auth_code_click"
            android:text="@string/order_transport"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/sp_24" />

        <Button
            android:id="@+id/btn_order_delete"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_54"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/button_auth_code_click"
            android:text="@string/order_delete"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/sp_24" />
        <Button
            android:id="@+id/btn_order_pay"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_54"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/button_auth_code_click"
            android:text="@string/order_pay"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/sp_24" />
        <Button
            android:id="@+id/btn_order_refund"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_54"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/button_auth_code_click"
            android:text="@string/order_refund"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/sp_24" />
        <Button
            android:id="@+id/btn_order_refund_about"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_54"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/button_auth_code_click"
            android:text="@string/order_refund_about"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/sp_24" />
    </LinearLayout>
</LinearLayout>