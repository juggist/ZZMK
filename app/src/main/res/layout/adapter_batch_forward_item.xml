<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_margin">

    <ImageButton
        android:id="@+id/ibtn_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/i_btn_select_bg"
        app:layout_constraintBottom_toBottomOf="@+id/iv_session_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_session_icon" />

    <ImageView
        android:id="@+id/iv_session_icon"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:layout_marginLeft="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_40"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_session_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="韩国GM solution水光蜂蜜面膜蚕丝补水保湿紧致提拉滋润"
        android:textColor="@color/color_invitecode"
        android:textSize="@dimen/sp_24"
        app:layout_constraintLeft_toRightOf="@+id/iv_session_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_session_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_strok_red_bg"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="中国"
        android:textColor="@color/spes_red"
        android:textSize="@dimen/sp_22"
        app:layout_constraintLeft_toLeftOf="@+id/tv_session_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_session_name" />

    <TextView
        android:id="@+id/tv_session_old_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="代购价: ￥238"
        android:textColor="@color/color_invitecode"
        android:textSize="@dimen/sp_22"
        app:layout_constraintLeft_toLeftOf="@+id/tv_session_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_session_location" />

    <TextView
        android:id="@+id/tv_session_counter_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/font_normal"
        android:textSize="@dimen/sp_22"
        app:layout_constraintLeft_toRightOf="@+id/tv_session_old_price"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_session_location" />

    <TextView
        android:id="@+id/tv_session_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="净含量: 10片/盒"
        android:textColor="@color/color_invitecode"
        android:textSize="@dimen/sp_22"
        app:layout_constraintLeft_toLeftOf="@+id/tv_session_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_session_old_price" />

    <TextView
        android:id="@+id/tv_session_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="货号: 123456"
        android:textColor="@color/color_invitecode"
        android:textSize="@dimen/sp_22"
        app:layout_constraintLeft_toLeftOf="@+id/tv_session_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_session_weight" />

    <TextView
        android:id="@+id/tv_session_new_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="￥79"
        android:textColor="@color/font_select"
        android:textSize="@dimen/sp_28"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/tv_session_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_session_no" />

</androidx.constraintlayout.widget.ConstraintLayout>