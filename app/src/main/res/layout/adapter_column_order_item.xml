<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minHeight="@dimen/dp_142"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_invitecode"
        android:textSize="@dimen/sp_24"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_toRightOf="@+id/tv_order"
        android:layout_above="@+id/tv_order"
        android:layout_marginBottom="@dimen/dp_m_40"
        android:layout_marginLeft="@dimen/dp_m_30"
        android:id="@+id/tv_order_dot"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:background="@drawable/textview_circle_red_bg"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_24"
        />
</RelativeLayout>