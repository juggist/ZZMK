<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_228"
    android:minHeight="@dimen/dp_228"
    android:background="@android:color/white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140">

        <TextView
            android:id="@+id/address_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginTop="@dimen/dp_34"
            android:textColor="@color/color_invitecode"
            android:textSize="@dimen/sp_30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/address_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:textColor="@color/color_invitecode"
            android:textSize="@dimen/sp_30"
            app:layout_constraintBottom_toBottomOf="@+id/address_tv_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/address_tv_name" />

        <TextView
            android:id="@+id/address_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_34"
            android:layout_marginBottom="@dimen/dp_34"
            android:textColor="@color/color_invitecode"
            android:textSize="@dimen/sp_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/address_tv_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/item_bg" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/address_ibtn_select"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_marginLeft="@dimen/common_margin"
            android:src="@drawable/address_ibtn_address_select_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/address_tv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="@string/address_set_normal"
            android:textColor="@color/color_invitecode"
            android:textSize="@dimen/sp_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/address_ibtn_select"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/address_tv_del_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/common_margin"
            android:text="@string/address_set_delete"
            android:textColor="@color/color_invitecode"
            android:textSize="@dimen/sp_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/address_iv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/address_icon_del"
            app:layout_constraintBottom_toBottomOf="@+id/address_tv_del_title"
            app:layout_constraintRight_toLeftOf="@+id/address_tv_del_title"
            app:layout_constraintTop_toTopOf="@+id/address_tv_del_title" />

        <TextView
            android:id="@+id/address_tv_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/common_margin"
            android:text="@string/address_set_edit"
            android:textColor="@color/color_invitecode"
            android:textSize="@dimen/sp_24"
            app:layout_constraintBottom_toBottomOf="@+id/address_tv_del_title"
            app:layout_constraintRight_toLeftOf="@+id/address_iv_del"
            app:layout_constraintTop_toTopOf="@+id/address_tv_del_title" />

        <ImageView
            android:id="@+id/address_tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/address_icon_edit"
            app:layout_constraintBottom_toBottomOf="@+id/address_tv_del_title"
            app:layout_constraintRight_toLeftOf="@+id/address_tv_edit_title"
            app:layout_constraintTop_toTopOf="@+id/address_tv_del_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>