<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/order_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_104"
        android:layout_marginRight="@dimen/common_margin"
        android:paddingBottom="@dimen/dp_60"
        android:textColor="@color/color_invitecode"
        android:textSize="@dimen/sp_32"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/order_v_line"
        android:layout_width="@dimen/dp_4"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_50"
        android:background="@color/font_select"
        app:layout_constraintBottom_toBottomOf="@+id/order_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_iv" />

    <ImageView
        android:id="@+id/order_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/order_pay_button_selected"
        app:layout_constraintLeft_toLeftOf="@+id/order_v_line"
        app:layout_constraintRight_toRightOf="@+id/order_v_line"
        app:layout_constraintTop_toTopOf="@+id/order_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>